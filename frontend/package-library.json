{
  "name": "@itdo/erp-components",
  "version": "1.0.0",
  "description": "A comprehensive React component library for ERP systems",
  "main": "dist/index.umd.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build:lib": "vite build --config build-library.ts",
    "build:types": "tsc --emitDeclarationOnly --outDir dist/types",
    "build": "npm run build:lib && npm run build:types",
    "prepublishOnly": "npm run build"
  },
  "exports": {
    ".": {
      "import": "./dist/index.es.js",
      "require": "./dist/index.umd.js",
      "types": "./dist/index.d.ts"
    },
    "./components": {
      "import": "./dist/components.es.js",
      "require": "./dist/components.umd.js",
      "types": "./dist/components.d.ts"
    },
    "./hooks": {
      "import": "./dist/hooks.es.js",
      "require": "./dist/hooks.umd.js",
      "types": "./dist/hooks.d.ts"
    },
    "./utils": {
      "import": "./dist/utils.es.js",
      "require": "./dist/utils.umd.js",
      "types": "./dist/utils.d.ts"
    },
    "./design-system": {
      "import": "./dist/design-system.es.js",
      "require": "./dist/design-system.umd.js",
      "types": "./dist/design-system.d.ts"
    },
    "./styles": "./dist/style.css"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "@tanstack/react-query": "^4.0.0 || ^5.0.0",
    "lucide-react": "^0.400.0"
  },
  "dependencies": {
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "tailwind-merge": "^2.0.0"
  },
  "devDependencies": {
    "vite-plugin-dts": "^3.6.0",
    "vite-plugin-lib-inject-css": "^1.3.0"
  },
  "keywords": [
    "react",
    "typescript",
    "components",
    "ui",
    "erp",
    "enterprise",
    "dashboard",
    "forms",
    "charts",
    "tables",
    "authentication",
    "permissions",
    "real-time",
    "search",
    "accessibility"
  ],
  "author": "ITDO Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/itdo/erp-components.git"
  },
  "homepage": "https://erp-components.itdo.com",
  "bugs": {
    "url": "https://github.com/itdo/erp-components/issues"
  },
  "publishConfig": {
    "access": "public"
  }
}