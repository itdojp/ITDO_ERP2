{
  "dashboard": {
    "id": null,
    "title": "ITDO ERP Production Availability Dashboard",
    "tags": ["production", "availability", "sla", "cc03-v58"],
    "style": "dark",
    "timezone": "Asia/Tokyo",
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "üéØ Availability SLA Status",
        "type": "stat",
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 0},
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 99,
            "max": 100,
            "thresholds": {
              "steps": [
                {"color": "red", "value": 99},
                {"color": "yellow", "value": 99.5},
                {"color": "green", "value": 99.9}
              ]
            },
            "custom": {
              "displayMode": "gradient"
            }
          }
        },
        "options": {
          "colorMode": "background",
          "graphMode": "area",
          "justifyMode": "center",
          "orientation": "horizontal"
        },
        "targets": [
          {
            "expr": "availability:current_percent_1h",
            "refId": "A",
            "legendFormat": "Current Availability"
          }
        ]
      },
      {
        "id": 2,
        "title": "‚è±Ô∏è Recovery Time Tracking",
        "type": "stat",
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 0},
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "min": 0,
            "max": 900,
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 300},
                {"color": "red", "value": 900}
              ]
            }
          }
        },
        "targets": [
          {
            "expr": "max(availability:service_recovery_time)",
            "refId": "A",
            "legendFormat": "Max Recovery Time"
          }
        ]
      },
      {
        "id": 3,
        "title": "üìä Error Budget Consumption",
        "type": "gauge",
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 0},
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 70},
                {"color": "red", "value": 90}
              ]
            }
          }
        },
        "targets": [
          {
            "expr": "availability:error_budget_consumed_percent",
            "refId": "A",
            "legendFormat": "Error Budget Used"
          }
        ]
      },
      {
        "id": 4,
        "title": "üîÑ Service Uptime Status",
        "type": "heatmap",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "up",
            "refId": "A",
            "legendFormat": "{{ service }}"
          }
        ],
        "options": {
          "calculate": false,
          "yAxis": {
            "unit": "short"
          }
        }
      },
      {
        "id": 5,
        "title": "üìà Availability Trend (24h)",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 99,
            "max": 100,
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth",
              "spanNulls": false,
              "fillOpacity": 10,
              "gradientMode": "opacity"
            }
          }
        },
        "targets": [
          {
            "expr": "availability:current_percent_1h",
            "refId": "A",
            "legendFormat": "1h Availability"
          },
          {
            "expr": "availability:current_percent_24h", 
            "refId": "B",
            "legendFormat": "24h Availability"
          }
        ]
      },
      {
        "id": 6,
        "title": "üö® Active Availability Alerts",
        "type": "table",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16},
        "targets": [
          {
            "expr": "ALERTS{category=\"availability\"}",
            "refId": "A",
            "format": "table"
          }
        ],
        "options": {
          "showHeader": true
        },
        "fieldConfig": {
          "overrides": [
            {
              "matcher": {"id": "byName", "options": "alertstate"},
              "properties": [
                {
                  "id": "custom.displayMode",
                  "value": "color-background"
                },
                {
                  "id": "thresholds",
                  "value": {
                    "steps": [
                      {"color": "green", "value": null},
                      {"color": "red", "value": 1}
                    ]
                  }
                }
              ]
            }
          ]
        }
      },
      {
        "id": 7,
        "title": "üîç Request Rate & Error Rate",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 24},
        "fieldConfig": {
          "defaults": {
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear"
            }
          }
        },
        "targets": [
          {
            "expr": "sum(rate(http_requests_total[5m]))",
            "refId": "A",
            "legendFormat": "Total Request Rate"
          },
          {
            "expr": "sum(rate(http_requests_total{status=~\"5..\"}[5m]))",
            "refId": "B",
            "legendFormat": "Error Rate"
          }
        ]
      },
      {
        "id": 8,
        "title": "‚è±Ô∏è Response Time Distribution",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 24},
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "custom": {
              "drawStyle": "line",
              "fillOpacity": 20
            }
          }
        },
        "targets": [
          {
            "expr": "histogram_quantile(0.50, sum(rate(http_request_duration_seconds_bucket[5m])) by (le))",
            "refId": "A",
            "legendFormat": "50th percentile"
          },
          {
            "expr": "histogram_quantile(0.90, sum(rate(http_request_duration_seconds_bucket[5m])) by (le))",
            "refId": "B", 
            "legendFormat": "90th percentile"
          },
          {
            "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket[5m])) by (le))",
            "refId": "C",
            "legendFormat": "95th percentile"
          },
          {
            "expr": "histogram_quantile(0.99, sum(rate(http_request_duration_seconds_bucket[5m])) by (le))",
            "refId": "D",
            "legendFormat": "99th percentile"
          }
        ]
      },
      {
        "id": 9,
        "title": "üè• Service Health Status",
        "type": "stat",
        "gridPos": {"h": 6, "w": 24, "x": 0, "y": 32},
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {"options": {"0": {"text": "DOWN", "color": "red"}}, "type": "value"},
              {"options": {"1": {"text": "UP", "color": "green"}}, "type": "value"}
            ],
            "custom": {
              "displayMode": "list"
            }
          }
        },
        "options": {
          "colorMode": "background",
          "orientation": "horizontal",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          }
        },
        "targets": [
          {
            "expr": "up{service=\"itdo-erp-backend\"}",
            "refId": "A",
            "legendFormat": "Backend API"
          },
          {
            "expr": "up{service=\"itdo-erp-frontend\"}",
            "refId": "B",
            "legendFormat": "Frontend"
          },
          {
            "expr": "up{service=\"postgresql-database\"}",
            "refId": "C", 
            "legendFormat": "PostgreSQL"
          },
          {
            "expr": "up{service=\"redis-cache\"}",
            "refId": "D",
            "legendFormat": "Redis Cache"
          },
          {
            "expr": "up{service=\"keycloak-auth\"}",
            "refId": "E",
            "legendFormat": "Keycloak Auth"
          },
          {
            "expr": "up{service=\"nginx-loadbalancer\"}",
            "refId": "F",
            "legendFormat": "NGINX LB"
          }
        ]
      },
      {
        "id": 10,
        "title": "üåê External Endpoint Monitoring",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 38},
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "custom": {
              "drawStyle": "line"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 2},
                {"color": "red", "value": 10}
              ]
            }
          }
        },
        "targets": [
          {
            "expr": "probe_duration_seconds{service=\"external-endpoint\"}",
            "refId": "A",
            "legendFormat": "{{ instance }}"
          }
        ]
      },
      {
        "id": 11,
        "title": "üîí SSL Certificate Status",
        "type": "table",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 38},
        "targets": [
          {
            "expr": "(probe_ssl_earliest_cert_expiry - time()) / 86400",
            "refId": "A",
            "format": "table",
            "legendFormat": "{{ instance }}"
          }
        ],
        "fieldConfig": {
          "overrides": [
            {
              "matcher": {"id": "byName", "options": "Value"},
              "properties": [
                {
                  "id": "displayName",
                  "value": "Days Until Expiry"
                },
                {
                  "id": "unit",
                  "value": "d"
                },
                {
                  "id": "thresholds",
                  "value": {
                    "steps": [
                      {"color": "red", "value": null},
                      {"color": "yellow", "value": 7},
                      {"color": "green", "value": 30}
                    ]
                  }
                }
              ]
            }
          ]
        }
      }
    ],
    "annotations": {
      "list": [
        {
          "name": "Availability Incidents",
          "datasource": "Prometheus",
          "enable": true,
          "expr": "ALERTS{category=\"availability\", severity=\"critical\"}",
          "iconColor": "red",
          "titleFormat": "{{ alertname }}",
          "textFormat": "{{ summary }}"
        },
        {
          "name": "Deployments",
          "datasource": "Prometheus", 
          "enable": true,
          "expr": "increase(deployment_timestamp[1m])",
          "iconColor": "blue",
          "titleFormat": "Deployment",
          "textFormat": "New deployment detected"
        }
      ]
    },
    "templating": {
      "list": [
        {
          "name": "service",
          "type": "query",
          "query": "label_values(up, service)",
          "refresh": 1,
          "includeAll": true,
          "allValue": ".*"
        }
      ]
    },
    "links": [
      {
        "title": "Availability Runbooks",
        "url": "https://runbooks.itdo-erp.com/availability",
        "type": "link"
      },
      {
        "title": "Incident Response",
        "url": "https://incident.itdo-erp.com",
        "type": "link"
      }
    ]
  },
  "meta": {
    "type": "db",
