# ITDO ERP v2 - Production Environment Configuration
# CC03 v59.0 - Practical Production Infrastructure

# Application Configuration
SECRET_KEY=your-super-secret-key-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
API_URL=https://api.itdo-erp.com
AUTH_URL=https://auth.itdo-erp.com
ENVIRONMENT=production

# Database Configuration
POSTGRES_PASSWORD=your-postgres-password-change-in-production
POSTGRES_DB=itdo_erp
POSTGRES_USER=itdo_user

# Redis Configuration
REDIS_PASSWORD=your-redis-password-change-in-production

# Keycloak Configuration
KEYCLOAK_ADMIN_USER=admin
KEYCLOAK_ADMIN_PASSWORD=your-keycloak-admin-password-change-in-production
KEYCLOAK_DB_PASSWORD=your-keycloak-db-password-change-in-production
KEYCLOAK_HOSTNAME=auth.itdo-erp.com

# Monitoring Configuration
GRAFANA_ADMIN_PASSWORD=your-grafana-admin-password-change-in-production

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=itdo-erp-backups
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# SSL Configuration
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Performance Configuration
MAX_WORKERS=4
DB_POOL_SIZE=20
CACHE_TTL=3600